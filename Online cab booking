App.jsx
import React from "react";
import "./app.css";

function App() {
  const bookCab = () => {
    alert("Welcome to the Online Cab Booking System!");

    const name = prompt("Enter your full name:");
    if (!name) {
      alert("Booking canceled. Name is required.");
      return;
    }

    const pickup = prompt("Enter pickup location:");
    if (!pickup) {
      alert("Booking canceled. Pickup location is required.");
      return;
    }

    const drop = prompt("Enter drop location:");
    if (!drop) {
      alert("Booking canceled. Drop location is required.");
      return;
    }

    const carType = prompt(
      "Enter car type (Sedan, SUV, Hatchback):",
      "Sedan"
    );
    if (!carType) {
      alert("Booking canceled. Car type is required.");
      return;
    }

    const confirmBooking = window.confirm(
      `Please confirm your cab booking:\n\nName: ${name}\nPickup: ${pickup}\nDrop: ${drop}\nCar Type: ${carType}`
    );

    if (confirmBooking) {
      alert(
        `Thank you ${name}! Your ${carType} cab from ${pickup} to ${drop} is booked successfully.`
      );
    } else {
      alert("Booking canceled.");
    }
  };

  return (
    <div className="container">
      <h1>Online Cab Booking</h1>
      <button onClick={bookCab}>Book Cab</button>
    </div>
  );
}

export default App;

